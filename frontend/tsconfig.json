{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/components/*": [
        "components/*"
      ]
    },
    "baseUrl": "."
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "utils/splitString.js",
    "app/api/communities/route.js",
    "app/api/communities/[id]/dashboard/route.js",
    "app/api/communities/[id]/members/route.js",
    "app/api/communities/[id]/membership/route.js",
    "app/api/communities/[id]/join/route.js",
    "app/api/communities/[id]/presentation/route.js"
  ],
  "exclude": [
    "node_modules"
  ]
}